<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fon"
    tools:context=".profaile.RegisterActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:background="@drawable/img_card_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="190dp"
        android:textStyle="italic"
        android:text="Durak Games"
        android:textAppearance="@style/durak_games"
        android:gravity="top"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="190dp"
        android:textStyle="italic"
        android:text="Durak Games"
        android:textAppearance="@style/durak_games"
        android:gravity="top"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="15dp"
        android:textAppearance="@style/label"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.97sp"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center|left"/>

    <EditText
        android:id="@+id/et_login_in_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:layout_gravity="center"
        android:textColor="#524E4E"
        android:layout_marginRight="155dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="+996"
        android:inputType="phone"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#524E4E"
        android:layout_marginStart="20dp"
        android:layout_marginTop="480dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="200dp"/>

    <TextView
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Password"
        android:textColor="#524E4E"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="160dp"/>

    <EditText
        android:id="@+id/et_reaped_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:text="Создать"
        android:onClick="onCreate"
        android:background="@drawable/btn_create"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="#fff"/>

    <Button
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:text="Есть аккаутн"
        android:background="@drawable/btn_lines"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:onClick="haveAkk"
        android:layout_marginBottom="40dp"
        android:textColor="#fff"/>

</FrameLayout>