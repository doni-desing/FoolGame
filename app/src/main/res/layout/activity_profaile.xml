<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/d_start"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_fon"
    tools:context=".profaile.ProfaileActivity">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/img_card_icon"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/durak_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="371dp"
        android:textStyle="italic"
        android:text="Durak Games"
        android:textAppearance="@style/durak_games"
        android:gravity="top"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="94dp"
        android:layout_height="3dp"
        android:max="100"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="250dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

</FrameLayout>