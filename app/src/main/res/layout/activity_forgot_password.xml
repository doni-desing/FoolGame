<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fon"
    tools:context=".profaile.ForgotPasswordActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:background="@drawable/img_card_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="190dp"
        android:textStyle="italic"
        android:text="Durak Games"
        android:textAppearance="@style/durak_games"
        android:gravity="top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textAppearance="@style/label"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="155dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_forgot_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:layout_gravity="center|left"
        android:textColor="#fff"
        android:text="ВОСТОНОВИТЬ"
        android:onClick="onClick"
        android:background="@drawable/bg"
        android:layout_marginTop="100dp"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="32dp"
        android:text="Регистрация"
        android:textColor="#fff"
        android:layout_marginStart="230dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/btn_lines"/>

</FrameLayout>